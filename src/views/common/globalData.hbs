<!-- Data to be transferred from server to client, through data Attributes
The data transfer should not be made writing directly on JS dynamic files, to avoid code injection, thus this is safer
see: https://developer.mozilla.org/en-US/docs/Learn/HTML/Howto/Use_data_attributes -->

<data
    id =                "global_switches"
    value =             "global_switches"
    data-uber =         "{{{ serverData.settings.switches.uber }}}"
    data-social =       "{{{ serverData.settings.switches.social }}}"
    data-charts =       "{{{ negate serverData.settings.switches.disableCharts }}}"
    data-g_captcha =    "{{{ serverData.settings.switches.googleCaptcha }}}"
    data-g_analytics =  "{{{ serverData.settings.switches.googleAnalytics }}}"
    data-data_base =    "{{{ serverData.settings.switches.database }}}"
    data-print =        "{{{ serverData.settings.switches.print }}}"
    data-pdf =          "{{{ serverData.settings.switches.pdf }}}">
</data>

<data
    id =                       "global_variables"
    value =                    "global_variables"
    data-country =             "{{{ CC }}}"
    data-language =            "{{{ pageData.languageCode }}}"
    data-js_files =            "{{{ jsonObj serverData.fileNames.client }}}"
    data-country_list =        "{{{ jsonObj serverData.availableCountries }}}"
    data-countries_standards = "{{{ jsonObj serverData.countriesStandards }}}"
    data-domain_list =         "{{{ jsonObj serverData.domains.countries }}}"
    data-cdn_url =             "{{{ serverData.settings.cdn.url }}}"
    data-url_protocol =        "{{{ pageData.url.protocol }}}"
    data-client_dir =          "{{{ serverData.directories.client.client }}}"
    data-words =               "{{{ jsonObj words }}}"
    data-stats =               "{{{ jsonObj serverData.statsData }}}"
    data-ga_tracking_id =      "{{{ serverData.settings.googleAnalytics.trackingId }}}"
    data-not_localhost =       "{{{ pageData.notLocalhost }}}"
    data-is_this_a_test =      "{{{ pageData.isThisATest }}}"
    data-nonce =               "{{{ nonce }}}">
</data>

{{#if isThisStatsPage}}
    <data
        id =    "chart"
        value = "chart"
        data-stats_data = "{{{ jsonObj statsData }}}"
        data-stats_labels = "{{{ jsonObj statsLabels }}}">
    </data>
{{/if}}
