{
  "name": "autocosts",
  "version": "6.3.17",
  "description": "Automobile Costs Calculator",
  "main": "api.js",
  "scripts": {
    "test": "standard && node test/test.js",
    "coverage": "nyc npm run test",
    "postinstall": "node build.js -c -r prod && node bin/server.js --print --pdf -r prod",
    "updatePackages": "ncu -e 2 || (ncu -u && npm i --ignore-scripts && npm update && snyk protect && npm run commitAndUpload)",
    "commitAndUpload": "npm test && git commit -a -m 'update' && npm version patch && npm publish && git push",
    "snyk-protect": "snyk protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfoclpf/autocosts.git"
  },
  "keywords": [
    "car-costs",
    "calculator"
  ],
  "author": "Ferreira et al <joao.pimentel.ferreira@gmail.com> (https://autocosts.info)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jfoclpf/autocosts/issues"
  },
  "homepage": "https://autocosts.info",
  "files": [
    "build.js",
    "api.js",
    "commons.js",
    "contributing.md",
    "/build",
    "bin/server.js",
    "/src",
    "/docs"
  ],
  "standard": {
    "ignore": [
      "src/client/jquery/js_timer.js",
      "**/vfs_fonts.js",
      "bin/"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "api.js",
      "commons.js",
      "bin/**/*.js"
    ],
    "exclude": [
      "**/*vfs_fonts.js",
      "bin/client/jquery/*",
      "bin/server/captchaValidate.js",
      "bin/client/chart/chartjs.min.js",
      "bin/client/pdf/pdfmake.min.js",
      "bin/client/smart-app-banner.js"
    ]
  },
  "dependencies": {
    "ajv": "6.12.2",
    "async": "3.2.0",
    "body-parser": "1.19.0",
    "chart.js": "^2.9.3",
    "colors": "1.4.0",
    "command-line-args": "5.1.1",
    "compression": "1.7.4",
    "concat-files": "^0.1.1",
    "express": "4.x",
    "express-handlebars": "^4.0.4",
    "find": "0.3.0",
    "flat": "^5.0.0",
    "fs-extra": "^9.0.0",
    "geoip-lite": "1.4.2",
    "handlebars": "4.7.6",
    "is-online": "8.3.1",
    "jquery": "^3.5.1",
    "jquery-color": "^3.0.0-alpha.2",
    "jquery-sidebar": "^3.3.2",
    "mobile-detect": "^1.4.4",
    "mysql": "2.18.1",
    "paragraph-builder": "1.0.15",
    "path": "^0.12.7",
    "pdfmake": "^0.1.65",
    "progress": "2.0.3",
    "request": "2.88.2",
    "smart-app-banner": "^2.0.0",
    "sort-object": "3.0.3",
    "striptags": "^3.1.1"
  },
  "devDependencies": {
    "csslint": "^1.0.5",
    "debug": "^4.1.1",
    "extract-zip": "2.0.0",
    "html-minifier": "^4.0.0",
    "html-validate": "^2.23.0",
    "html-validator": "^5.1.12",
    "imagemagick": "0.1.3",
    "jshint": "2.11.1",
    "jsonminify": "^0.4.1",
    "libxmljs": "0.19.7",
    "mocha": "7.1.2",
    "money": "^0.2.0",
    "nyc": "15.0.1",
    "phantomjs-prebuilt": "^2.1.16",
    "prettyjson": "^1.2.1",
    "snyk": "^1.323.1",
    "sql-formatter": "2.3.3",
    "standard": "14.3.4",
    "uglify-js": "3.9.3",
    "uglifycss": "0.0.29",
    "util": "0.12.3",
    "w3c-css": "2.0.2",
    "walk": "^2.3.14",
    "webpage": "^0.3.0"
  },
  "snyk": true
}
