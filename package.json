{
  "name": "autocosts",
  "version": "6.3.41",
  "description": "Automobile Costs Calculator",
  "main": "api.js",
  "scripts": {
    "start": "node bin/server.js --print --pdf -r prod",
    "test": "node build.js -c && node build/compressImages.js #standard && npx depcheck && node test/test.js",
    "coverage": "nyc npm run test",
    "postinstall": "node build.js -c -r prod",
    "npmPublish": "npm version patch && npm publish && git push",
    "refreshProdStats": "node build.js -dt -r prod",
    "snyk-protect": "snyk protect",
    "depcheck": "npx depcheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfoclpf/autocosts.git"
  },
  "keywords": [
    "car-costs",
    "calculator"
  ],
  "contributors": [
    "João Ferreira <joao.pimentel.ferreira@gmail.com>",
    "Martín Cristaldo <martinuxui@gmail.com>"
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jfoclpf/autocosts/issues"
  },
  "homepage": "https://autocosts.info",
  "files": [
    "build.js",
    "api.js",
    "commons.js",
    "contributing.md",
    "/build",
    "bin/server.js",
    "/src",
    "/docs"
  ],
  "standard": {
    "ignore": [
      "src/client/jquery/js_timer.js",
      "**/vfs_fonts.js",
      "bin/"
    ]
  },
  "eslintConfig": {
    "root": true
  },
  "nyc": {
    "all": true,
    "include": [
      "api.js",
      "commons.js",
      "bin/**/*.js"
    ],
    "exclude": [
      "**/*vfs_fonts.js",
      "bin/client/jquery/*",
      "bin/server/captchaValidate.js",
      "bin/client/chart/chartjs.min.js",
      "bin/client/pdf/pdfmake.min.js",
      "bin/client/smart-app-banner.js"
    ]
  },
  "dependencies": {
    "async": "^3.2.0",
    "body-parser": "^1.19.0",
    "chart.js": "^2.9.4",
    "colors": "^1.4.0",
    "command-line-args": "^5.1.1",
    "compression": "^1.7.4",
    "concat-files": "^0.1.1",
    "debug": "^4.3.2",
    "express": "4.x",
    "express-handlebars": "^5.3.2",
    "express-useragent": "^1.0.15",
    "find": "^0.3.0",
    "flat": "^5.0.2",
    "fs-extra": "^9.0.1",
    "geoip-lite": "^1.4.2",
    "handlebars": "^4.7.7",
    "is-online": "^9.0.1",
    "jquery": "^3.5.1",
    "jquery-color": "^3.0.0-alpha.2",
    "jquery-sidebar": "^3.3.2",
    "mysql": "2.18.1",
    "paragraph-builder": "1.0.15",
    "pdfmake": "^0.1.69",
    "progress": "^2.0.3",
    "request": "^2.88.2",
    "smart-app-banner": "^2.0.0",
    "sort-object": "^3.0.3",
    "striptags": "^3.1.1"
  },
  "devDependencies": {
    "chrome-launcher": "^0.13.4",
    "depcheck": "^1.4.2",
    "extract-zip": "2.0.1",
    "html-minifier": "^4.0.0",
    "html-validate": "^3.5.0",
    "html-validator": "^5.1.17",
    "imagemagick": "^0.1.3",
    "imagemagick-cli": "^0.5.0",
    "jshint": "2.12.0",
    "jsonminify": "^0.4.1",
    "lighthouse": "^7.5.0",
    "money": "^0.2.0",
    "nyc": "^15.1.0",
    "phantomjs-prebuilt": "^2.1.16",
    "prettyjson": "^1.2.1",
    "snyk": "^1.617.0",
    "sql-formatter": "^2.3.3",
    "standard": "^16.0.1",
    "uglify-js": "^3.11.5",
    "uglifycss": "^0.0.29",
    "w3c-css": "^2.0.2",
    "walk": "^2.3.14"
  },
  "snyk": true
}
